                <ListBoxItem Background="AntiqueWhite">Portrait</ListBoxItem>
                <ListBoxItem Background="Azure">This text as new page param</ListBoxItem>
                <ListBoxItem Name ="lstbxitm4"
                             Background="Beige">Get string data from a page.</ListBoxItem>
            </ListBox>
            <Button Name="btnShowPicture" 
                    Background="Bisque"
                HorizontalAlignment="Left"
                    Margin="2" Padding="4"
                    Click ="btnShowPicture_Click">Show Picture</Button>
        </StackPanel>

    </Grid>
</Page>
